
@{
    ViewData["Title"] = "Registration";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Registration</h1>

<form asp-controller="Home" asp-action="Registered">
    @*Username*@
    <div class="form-group">
        <label>Username</label>
        <input class="form-control" type="text" name="username" />
    </div>
    @*First Name*@
    <div class="form-group">
        <label>First Name</label>
        <input class="form-control" type="text" name="FirstName" />
    </div>
    @*LAst Name*@
    <div class="form-group">
        <label>Last Name</label>
        <input class="form-control" type="text" name="LastName" />
    </div>
    @*Email*@
    <div class="form-group">
        <label>Email</label>
        <input type="email" class="form-control" name="email" />
        @*Type is email to make sure there is an @ in the email. It can be used as a type of Validation*@
    </div>
    @*Password*@
    <div class="form-group">
        <label>Password</label>
        <input type="text" class="form-control" name="password" />
    </div>
    @*Phone Number*@
    <div class="form-group">
        <label>Phone Number</label>
        <input type="tel" class="form-control" name="phone" />
        @*type is tel, which is for telephone number. it can be used for Validation.*@
    </div>
    @*Gender*@
    <div class="form-group">
        <label>Gender</label><br />
        <input type="radio" name="gender" value="Male" id="male" />
        <label for="male">Male</label><br />
        <input type="radio" name="gender" value="Female" id="female" />
        <label for="female">Female</label><br />
        <input type="radio" name="gender" value="Other" id="other" />
        <label for="other">Prefer Not to Answer</label>
    </div>
    @*Date of Birth*@
    <div class="form-group">
        <label>Date of Birth</label>
        <input type="date" />
    </div>
    @*Recieve emails*@
    <div class="form-group">
        <lablel>Would you like to receive emails</lablel><br />
        <input type="checkbox" name="recieveEmail" value="Yes" id="yes" />
        <label for="yes">Yes, I would like to recieve emails, which can include special coupons. </label>
    </div>
    @*Submit Button*@
    <div class="form-group">
        <input type="submit" class="form-control btn btn-primary" />
    </div>
</form>

